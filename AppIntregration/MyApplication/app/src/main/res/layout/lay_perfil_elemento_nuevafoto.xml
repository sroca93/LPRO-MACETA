<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nueva imagen subida"
        android:id="@+id/textViewNuevaFoto"
        android:maxWidth="170dp"
        android:layout_alignTop="@+id/imageViewNuevaFoto"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageViewNuevaFoto"
        android:layout_alignBottom="@+id/imageViewNuevaFoto"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <ImageView
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:id="@+id/imageViewNuevaFoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:maxWidth="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp" />
</RelativeLayout>